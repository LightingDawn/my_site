<%- include('../../shared/includes/head', { pageTitle: '登入頁面' }) %>
  <meta name="description" content="透過登入來使用管理文章和發表文章的功能吧!">
  <link rel="stylesheet" href="/styles/registrate_form.css">
</head>
<body>
<%- include('../../shared/includes/header') %>
  <main>
    <h1>使用者登入</h1>
    <% if (inputData.errorMessage) { %>
      <div id="error">
        <p id="error-message"><%= inputData.errorMessage %></p>
      </div>
    <% } %>
    <form id="registration" action="/login" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <span class="important">*</span>
        <label for="email">信箱</label>
        <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="password">密碼</label>
        <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
      </p>
      <div id="submit">
        <button class="btn">登入</button>
      </div>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>