<%- include('../../shared/includes/head', { pageTitle: '註冊頁面' }) %>
  <meta name="description" content="透過申請加入我們部落格的大家庭!">
  <link rel="stylesheet" href="/styles/registrate_form.css">
</head>
<body>
<%- include('../../shared/includes/header') %>
  <main>
    <h1>使用者註冊</h1>
    <% if (inputData.errorMessage) { %>
      <div id="error">
        <p id="error-message"><%= inputData.errorMessage %></p>
      </div>
    <% } %>
    <form id="registration" action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <span class="important">*</span>
        <label for="username">姓名</label>
        <input type="text" id="username" name="username" minlength="1" value="<%= inputData.username %>" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="nickname">暱稱</label>
        <input type="text" id="nickname" name="nickname" minlength="1" maxlength="20" value="<%= inputData.nickname %>" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="email">信箱</label>
        <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="confirm-email">確認信箱</label>
        <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
      </p>
      <p>
        <span class="important">*</span>
        <label for="password">密碼</label>
        <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
      </p>
      <div id="submit">
        <button class="btn">註冊</button>
      </div>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>